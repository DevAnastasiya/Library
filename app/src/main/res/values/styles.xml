<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewHolder" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/bg_orange</item>
    </style>

    <style name="Background" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/bg_second_orange</item>
    </style>

    <style name="AuthorListActivity" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthorListActivity.BookNameListActivity">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookNameDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/bg_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthorDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bg_grey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DescriptionDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
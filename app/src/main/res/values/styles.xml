<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewHolder" parent="TextAppearance.AppCompat">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Background" parent="TextAppearance.AppCompat">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AuthorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthorText.BookNameText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookNameText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthorDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DescriptionDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FloatingActionButton" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="background">@drawable/float_btn_settings</item>
    </style>

    <style name="SettingsText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorBackgroundFloating</item>
    </style>

</resources>
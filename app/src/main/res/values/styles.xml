<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewHolder" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/bg_orange</item>
    </style>

    <style name="BookPage" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/bg_dark_grey</item>
    </style>

    <style name="AuthorRecyclerView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BookNameRecyclerView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BookNameDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AuthorDetailsActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bg_orange</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">start</item>
    </style>

</resources>
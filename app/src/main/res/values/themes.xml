<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Library" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/bg_second_orange</item> <!-- Фон -->
        <item name="colorPrimaryVariant">@color/bg_orange</item> <!-- Фон эл-тов в списке -->
        <item name="colorOnPrimary">@color/black</item> <!-- Текст в списке, описание книги -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_grey</item>  <!-- Обводка, название и автор -->
        <item name="colorSecondaryVariant">@color/bg_dark_blue</item>   <!-- Фон кнопки -->
        <item name="colorOnSecondary">@color/white</item> <!-- Белый (день) и черный (ночь) -->
        <item name="colorBackgroundFloating">@color/black</item> <!-- Черный (день) и белый (ночь)  - 2 -->


        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_orange</item>
    </style>

    <style name="Theme.Library" parent="Base.Theme.Library" />

</resources>
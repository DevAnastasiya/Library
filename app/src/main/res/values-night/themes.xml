<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Library" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <item name="colorPrimary">@color/bg_dark_blue</item>
        <item name="colorPrimaryVariant">@color/bg_grey</item>
        <item name="colorOnPrimary">@color/bg_orange</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/bg_second_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorBackgroundFloating">@color/white</item> <!-- Черный (день) и белый (ночь)  - 2 -->


        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_dark_blue</item>
    </style>
</resources>